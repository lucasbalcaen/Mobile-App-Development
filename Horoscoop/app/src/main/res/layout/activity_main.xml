<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txUwGegevens"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="UW GEGEVENS:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNaam"
        android:layout_below="@+id/txUwGegevens"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txUwGegevens"
        android:hint="Uw naam:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVoornaam"
        android:layout_below="@+id/txtNaam"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Uw voornaam:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geboortejaar:"
        android:id="@+id/txbGeboortejaar"
        android:layout_below="@+id/txtVoornaam"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGeboortejaar"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/txbGeboortejaar"
        android:layout_toEndOf="@+id/txbGeboortejaar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer uw geboortejaar"
        android:id="@+id/btnGeboortejaar"
        android:layout_below="@+id/txbGeboortejaar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtVoornaam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer uw horoscoop"
        android:id="@+id/btnHoroscoop"
        android:layout_below="@+id/btnGeboortejaar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnHoroscoop"
        android:id="@+id/imgHoroscoop" />

</RelativeLayout>
