<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR INPUT"
        android:id="@+id/txtInput"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHeight"
        android:layout_below="@+id/txtInput"
        android:layout_alignParentStart="true"
        android:hint="Your height"
        android:inputType="numberDecimal"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMass"
        android:layout_below="@+id/txtHeight"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:layout_alignParentEnd="true"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Your mass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/btnUpdate"
        android:layout_below="@+id/txtMass"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtMass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR BMI INFO"
        android:id="@+id/txtBmiInfo"
        android:layout_below="@+id/btnUpdate"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:id="@+id/imgBMI"
        android:layout_below="@+id/txtBmiInfo"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/silhouette_1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIndex"
        android:layout_alignTop="@+id/imgBMI"
        android:layout_marginLeft="120dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Index" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategorie"
        android:layout_below="@+id/txtIndex"
        android:layout_marginLeft="120dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Categorie" />
</RelativeLayout>
