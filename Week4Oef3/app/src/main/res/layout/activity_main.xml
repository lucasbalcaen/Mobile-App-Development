<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEBBROWSER NMCT.BE"
        android:id="@+id/btnNMCT"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE CALL"
        android:id="@+id/btnCall"
        android:layout_below="@+id/btnNMCT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnNMCT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIAL NUMBER"
        android:id="@+id/btnDial"
        android:layout_below="@+id/btnCall"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCall" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEOLOCATION"
        android:id="@+id/btnGeo"
        android:layout_below="@+id/btnDial"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACTS"
        android:id="@+id/btnContacts"
        android:layout_below="@+id/btnGeo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnGeo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT FIRST CONTACT"
        android:id="@+id/btnEFC"
        android:layout_below="@+id/btnContacts"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnContacts" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE BMI"
        android:id="@+id/btnBMI"
        android:layout_below="@+id/btnEFC"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnEFC" />

</RelativeLayout>
