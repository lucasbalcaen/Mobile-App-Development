<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="launching.nmct.howest.be.week4oef3.GeoActivity">

    <TextView android:text="Locatie" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocatie" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLatitude"
        android:layout_below="@+id/txtLocatie"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Latitude:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLongitude"
        android:layout_below="@+id/txtLatitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtLatitude"
        android:text="Longitude" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toon locatie"
        android:id="@+id/btnToon"
        android:layout_below="@+id/txtLongitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtLongitude" />

</RelativeLayout>
